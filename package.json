{
  "name": "living-power-dev",
  "private": true,
  "scripts": {
    "start": "AGENTS=1 pnpm network",
    "network": "pnpm build:happ && concurrently -k \"UI_PORT=1420 pnpm -F ui start\" \"pnpm launch\"",
    "launch": "concurrently-repeat \"pnpm tauri dev --no-watch\" $AGENTS",
    "test": "pnpm run build:happ && nix flake check -L && pnpm -F tests test",
    "build:happ": "nix build -L .#living_power_happ -o workdir/living-power.happ",
    "build:happ-release": "nix build -L .#living_power_happ.meta.release -o workdir/living-power.happ",
    "package": "nix build -L .#living_power_happ.meta.release -o workdir/living-power.happ && pnpm -F ui package && hc web-app pack workdir",
    "network:android": "pnpm build:happ && concurrently -k \"pnpm local-services\" \"UI_PORT=1420 pnpm -F ui start\" \"pnpm tauri dev\" \"pnpm tauri android dev\"",
    "build:zomes": "CARGO_TARGET_DIR=target cargo build --release --target wasm32-unknown-unknown --workspace --exclude living-power",
    "tauri": "tauri"
  },
  "devDependencies": {
    "@holochain-playground/cli": "^0.1.1",
    "@tauri-apps/cli": "^2.0.0-rc",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@eslint/js": "^8.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "new-port-cli": "^1.0.0",
    "prettier": "^3.2.5",
    "typescript-eslint": "^7.7.0",
    "typescript": "^5.4.5",
    "concurrently-repeat": "^0.0.1"
  },
  "type": "module",
  "engines": {
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.7.1+sha512.faf344af2d6ca65c4c5c8c2224ea77a81a5e8859cbc4e06b1511ddce2f0151512431dd19e6aff31f2c6a8f5f2aced9bd2273e1fed7dd4de1868984059d2c4247"
}